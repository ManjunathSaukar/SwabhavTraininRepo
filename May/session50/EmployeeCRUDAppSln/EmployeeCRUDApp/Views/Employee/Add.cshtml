@using EmployeeCRUDApp.ViewModels
@model EmployeeAddVM
<link href="~/Content/bootstrap.css" rel="stylesheet" />
<div class="container">
    <h1>
        @Model.Title
    </h1>

    @using (Html.BeginForm())
    {
        <p>
            Id is : @Html.TextBoxFor(m => m.EmployeeID)
        </p>
        <p>
            Name is : @Html.TextBoxFor(m => m.EmployeeName)
        </p>
        <p>
            Salary is : @Html.TextBoxFor(m => m.EmployeeSalary)
        </p>
        <input type="submit" value="Add"/>
    }
</div>


